---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header
  class="sticky top-0 z-50 border-b border-neutral-200/60 dark:border-neutral-800/60 bg-white dark:bg-neutral-900"
>
  <div class="mx-auto max-w-[800px] px-4 sm:px-6 md:px-8 py-6">
    <div class="flex items-center justify-between gap-4">
      <div class="flex gap-2 align-bottom">
        <a href="/" class="group inline-flex items-baseline gap-2">
          <span
            class="text-xl sm:text-2xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100"
          >
            {SITE_TITLE}
          </span>
        </a>
        <span class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
          {SITE_DESCRIPTION}
        </span>
      </div>
      <div class="flex items-center gap-3 sm:gap-4">
        <nav
          class="hidden sm:flex items-center gap-4 text-sm text-neutral-600 dark:text-neutral-300"
        >
          <HeaderLink href="/">首页</HeaderLink>
          <HeaderLink href="/about">关于</HeaderLink>
          <HeaderLink href="/atom.xml">RSS</HeaderLink>
        </nav>
        <ThemeIcon />
      </div>
    </div>
  </div>
</header>
