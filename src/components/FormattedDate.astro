---
interface Props {
  date: string | Date;
}

const { date } = Astro.props;
const formattedDate = new Date(date);
---

<time datetime={formattedDate.toLocaleDateString()}>
  {
    formattedDate.toLocaleDateString("zh-cn", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
