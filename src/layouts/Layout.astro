---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

// Props allow pages to set title/description; fallback to site defaults
const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="zh" class="theme">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="bg-white text-neutral-900 dark:bg-neutral-950 dark:text-neutral-100"
  >
    <Header />
    <main class="mx-auto max-w-[800px] px-4 sm:px-6 md:px-8 py-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
